<h1>All Tags</h1>

<ul id="tags">
  <% @tags.each do |tag| %>
    <li>
      <%= link_to tag.name, tag_path(tag),
       class: 'tag_title', id: "tag_#{tag.id}" %>
       <% if logged_in? %>
      <%=link_to "Delete", tag_path(tag.id), method: :delete,
       data: {confirm: "Really delete the tag?"} %>
       <% end %>
    </li>
  <% end %>
</ul>
